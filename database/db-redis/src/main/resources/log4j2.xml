<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG" monitorInterval="300">
  <properties>
    <property name="LOG_HOME">./logs</property>
    <property name="DATABASE">redis</property>
  </properties>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
    <RollingRandomAccessFile name="Redis" fileName="${LOG_HOME}/${DATABASE}.log"
        filePattern="${LOG_HOME}/$${date:yyyy-MM}/${DATABASE}-%d{yyyy-MM-dd HH-mm}-%i.log">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1"/>
        <SizeBasedTriggeringPolicy size="10 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="20"/>
    </RollingRandomAccessFile>
  </Appenders>
  <Loggers>
    <Logger name="redis" level="warn" additivity="false">
      <AppenderRef ref="Redis"/>
    </Logger>
  </Loggers>
</Configuration>
